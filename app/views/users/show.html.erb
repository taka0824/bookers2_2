<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/sidebar' %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback: "no_image.jpg", size:"40x40" %>
              </td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>